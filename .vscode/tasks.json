{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Server",
            "type": "shell",
            "windows": {
                "command": "start http://127.0.0.1:4000/; bundle exec jekyll serve"
            },
            "osx": {
                "command": "open http://127.0.0.1:4000/; bundle exec jekyll serve"
            },
            "linux": {
                "command": "xdg-open http://127.0.0.1:4000/; bundle exec jekyll serve"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}